!!! 5
%html{ lang: 'en' }
  = partial 'shared/head'

  %body.js-dispatcher{ data: { 'dispatcher-page' => 'article' } }
    = partial 'shared/header'

    %main{ role: 'main' }
      %article.row.js-has-headingLink{ role: 'article' }
        .cell.well.well--l

          %h1.mbm.tci{ class: ('js-orphan' unless current_page.data.allow_orphan) }= current_page.data.title
          %p.lead.mbl.js-orphan= current_page.data.description

          = find_and_preserve do
            = yield

          %time.db.twb= pretty_date(current_page.data.date)

    = partial 'shared/footer-scripts'
