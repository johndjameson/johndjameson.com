          %p.mbf.tcis.tsi.tsl.js-orphan= current_page.data.description

      %section.row.has-sector
        .cell
          %article.post.js-has-headingLink.js-sidenotes{ role: 'article' }

            .g.sector
              .g-b.g-b--l--2of3.sector-item.sector-item--a.sector-item--a--invert
                .well.well--l.mbxl--m.prs--l
                  .cell.cell--s

                    .post-content
                      = find_and_preserve do
                        = yield

              .g-b.g-b--l--1of3.sector-item.sector-item--b.sector-item--b--invert.dn.db--l
                .well.well--l.mbxl--m

    = partial 'shared/footer'
