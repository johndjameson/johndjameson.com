%head
  %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1.0' }
  %link{ rel: 'preconnect', href: 'https://use.typekit.net' }
  %link{ rel: 'preload', href: asset_path(:fonts, 'robur-regular.woff2'), as: 'font', type: 'font/woff2', crossorigin: true }

  %title= page_title

  %meta{ name: 'description', content: escape_html(current_page.data.description) }

  = stylesheet_link_tag 'application'

  = javascript_include_tag 'application', defer: true
